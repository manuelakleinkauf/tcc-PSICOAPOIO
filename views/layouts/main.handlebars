                <li>
                    <img class= "navImg" src="/imagens/estresse.png" />
                    <a href="/estresse">Estresse</a>
                </li>
                <li>
                    <img class= "navImg" src="/imagens/profissionais.png" />
                    <a href="/profissionais">Profissionais</a>
                </li>
                <li>
                    <img class= "navImg" src="/imagens/autoavaliacao.png" />
                    
                    {{#if session.userid}} 
                        <a href="/autoavaliacao">Autoavaliação</a>
                    {{else}}
                        <a class="linkForum"  href="/login">Autoavaliação</a>            
                    {{/if}}
                </li>
                <li>
